<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <p><%= p %><%= eData.aCredit %></p>

    <table>
      <tr>
        <th>Member ID</th>
        <td><%= eData.eID %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= eData.name %></td>
      </tr>
      <tr>
        <th>Address</th>
        <td><%= eData.address %></td>
      </tr>
      <tr>
        <th>Date of Birth</th>
        <td><%= eData.dob %></td>
      </tr>
      <tr>
        <th>Employer Name</th>
        <td><%= eData.eName %></td>
      </tr>
      <tr>
        <th>available Credits</th>
        <td><%= eData.aCredit %></td>
      </tr>
    </table><br>
    <a href="/credits"><button type="button" name="button">Use Credit</button></a><br>
    <br>
    <% if (record && record.length > 0) { %>
      <h3>Records</h3>
      <% record.forEach(function(record) { %>
        <table>
          <tr>
            <th><%= record.name %></th>
            <td>did credit amount of </td>
            <th><%= record.cAmount %></th>
            <td>at</td>
            <th><%= record.date %></th>
            <td>and remaining credit amount is </td>
            <th><%= record.rAmount %></th>
          </tr>
        </table>
      <% }); %>
    <% } else { %>
      <h3> No Record Here !</h3>
    <% } %>

  </body>
</html>
